<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%- include("includes/impLinks.ejs") %>
    <link rel="stylesheet" href="/newMinor.css">
    <title>Document</title>
</head>
<body>
    <%- include("includes/navbar.ejs") %>
    <%- include("includes/flash.ejs") %>

    <div class="container">
        <h1>Create New Major</h1><br>
        <form method="post" action="http://localhost:8080/majors/<%=obj.id%>/new">
            <label for="title">Title</label><br>
            <input name="title" type="text" id="title" required><br><br>

            <label for="img">Image</label><br>
            <input type="text" name="img" id="img" required><br><br>

            <label for="description">Description</label><br>
            <textarea name="description" id="description" rows="5" cols="75" required minlength="200" maxlength="1000"></textarea><br><br>

            <button style="transform: translateX(0.8rem);">Create</button>
        </form>
    </div>


    <%- include("includes/footer.ejs") %>
</body>
</html>